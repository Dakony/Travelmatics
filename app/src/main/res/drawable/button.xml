<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#64d8cb" />
            <gradient android:angle="-90" android:startColor="#64d8cb" android:endColor="#64d8cb"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#64d8cb" />
            <solid android:color="#64d8cb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#64d8cb" />
            <gradient android:angle="-90" android:startColor="#64d8cb" android:endColor="#000006" />
        </shape>
    </item>
</selector>